{
  "name": "tools",
  "version": "0.0.1",
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "jasmine": "^2.8.0",
    "karma": "^1.7.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "pre-commit": "^1.2.2",
    "webpack": "^3.8.1"
  },
  "scripts": {
    "lint": "eslint **/*.js",
    "lint-html": "eslint **/*.js -f html -o ./reports/lint-results.html",
    "lint-fix": "eslint --fix **/*.js",
    "test": "jasmine test/**/*.spec.js",
    "karmaTest": "karma start --single-run"
  },
  "pre-commit": [
    "lint",
    "karmaTest"
  ]
}
